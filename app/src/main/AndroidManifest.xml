<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.litewaveinc.litewave">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ltw_ic_launcher"
        android:label="@string/ltw_app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ltw_MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/ltw_app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ltw_LevelActivity"
            android:screenOrientation="portrait"
            android:label="Choose level" >
        </activity>
        <activity
            android:name=".activities.ltw_SeatActivity"
            android:screenOrientation="portrait"
            android:label="@string/ltw_title_activity_choose_seat">
        </activity>
        <activity
            android:name=".activities.ltw_ReadyActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.ltw_ShowActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.ltw_ResultsActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
