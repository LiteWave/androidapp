<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#00000000"
    tools:context="com.litewaveinc.litewave.activities.ResultsActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Thanks for Participating!"
        android:id="@+id/textThanks"
        android:gravity="center"
        android:textAlignment="center"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal|top"
        android:textSize="44dp"
        android:layout_above="@+id/textPoweredBy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="460dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="powered by"
        android:id="@+id/textPoweredBy"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_above="@+id/lwLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="78dp"
        android:id="@+id/lwLogo"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/lwlogosm"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
