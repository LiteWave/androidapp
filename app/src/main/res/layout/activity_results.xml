<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    tools:context=".activities.ResultsActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:scaleType="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Thanks for Participating!"
        android:id="@+id/textThanks"
        android:gravity="center"
        android:textAlignment="center"
        android:scaleType="fitStart"
        android:layout_gravity="center_horizontal|top"
        android:textSize="30dp"
        android:textIsSelectable="false"
        android:textColor="#000000"
        android:layout_marginBottom="150dp"
        android:layout_above="@+id/textPoweredBy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="460dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="powered by"
        android:id="@+id/textPoweredBy"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_above="@+id/lwLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="225dp"
        android:layout_height="78dp"
        android:id="@+id/lwLogo"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/lwlogosm"
        android:layout_above="@+id/returnButton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageViewWinner"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:scaleType="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/actionBarSize"
        android:text="RETURN"
        android:id="@+id/returnButton"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:textSize="30dp"
        android:textColor="#000000"
        app:layout_widthPercent="100%"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
